# =============================================================================
# AI Strategy Hub - Environment Variables
# =============================================================================
# Copia questo file in .env e compila con i valori reali
# IMPORTANTE: Non committare il file .env in Git!

# =============================================================================
# GENERAL
# =============================================================================
PROJECT_NAME="AI Strategy Hub"
VERSION="0.1.0"
ENVIRONMENT=development  # development | staging | production
DEBUG=true

# Security - CAMBIA IN PRODUZIONE!
SECRET_KEY=your-super-secret-key-min-32-characters-long-please-change-me
JWT_SECRET_KEY=your-jwt-secret-key-min-32-characters-long-please-change-me

# =============================================================================
# DATABASE - PostgreSQL
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=aistrategyhub
POSTGRES_USER=aistrategyhub
POSTGRES_PASSWORD=your-postgres-password-here

# Oppure usa DATABASE_URL direttamente:
# DATABASE_URL=postgresql://user:password@localhost:5432/aistrategyhub

# =============================================================================
# CACHE - Redis
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=  # Lascia vuoto se non configurato
# REDIS_URL=redis://localhost:6379/0

SESSION_TTL_SECONDS=604800  # 7 giorni

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# MICROSOFT GRAPH API (Email)
# =============================================================================
# Per invio email tramite Microsoft 365 / Office 365
MS_GRAPH_TENANT_ID=your-tenant-id-here
MS_GRAPH_CLIENT_ID=your-client-id-here
MS_GRAPH_CLIENT_SECRET=your-client-secret-here
MS_GRAPH_SENDER_EMAIL=noreply@aistrategyhub.eu
MS_GRAPH_SENDER_NAME="AI Strategy Hub"

# =============================================================================
# STRIPE PAYMENTS
# =============================================================================
# Ottieni le chiavi su: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_CURRENCY=eur
STRIPE_SUCCESS_URL=https://aistrategyhub.eu/checkout/success
STRIPE_CANCEL_URL=https://aistrategyhub.eu/checkout/cancel

# =============================================================================
# CLAUDE API (Anthropic) - AI Chatbot
# =============================================================================
# Ottieni la chiave su: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-api-key-here
CLAUDE_MODEL=claude-sonnet-4-5-20250929
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.7

# RAG Settings
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_TOP_K_RESULTS=5

# =============================================================================
# FATTURAZIONE ELETTRONICA (SDI) - Italia
# =============================================================================
# Dati cedente (la tua azienda)
SELLER_NAME="AI Strategy Hub di Davide Botto"
SELLER_VAT=IT12345678901  # Tua Partita IVA
SELLER_FISCAL_CODE=BTTDVD80A01H501Z  # Codice fiscale se persona fisica
SELLER_ADDRESS="Via Roma 1"
SELLER_CITY="Milano"
SELLER_ZIP=20100
SELLER_PROVINCE=MI
SELLER_COUNTRY=IT
SELLER_REGIME_FISCALE=RF01  # RF01 = Ordinario

# PEC per invio fatture elettroniche
SDI_PEC_EMAIL=fatture@pec.aistrategyhub.eu
SDI_PEC_PASSWORD=your-pec-password-here

# Formato fattura
INVOICE_PREFIX=FAT
INVOICE_YEAR_FORMAT=%Y

# =============================================================================
# FRONTEND (Next.js)
# =============================================================================
FRONTEND_URL=http://localhost:3000

# =============================================================================
# SOCIAL MEDIA
# =============================================================================
LINKEDIN_URL=https://www.linkedin.com/in/davidebotto/

# =============================================================================
# SECURITY & CORS
# =============================================================================
# Lista domini autorizzati separati da virgola
CORS_ORIGINS=http://localhost:3000,https://aistrategyhub.eu,https://www.aistrategyhub.eu

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# MFA
MFA_ISSUER_NAME="AI Strategy Hub"
MFA_BACKUP_CODES_COUNT=10

# =============================================================================
# EMAIL TEMPLATES
# =============================================================================
EMAIL_FROM_NAME="AI Strategy Hub"
EMAIL_SUPPORT_ADDRESS=support@aistrategyhub.eu
EMAIL_VERIFICATION_EXPIRE_HOURS=24
PASSWORD_RESET_EXPIRE_HOURS=1

# =============================================================================
# FILE STORAGE
# =============================================================================
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE_MB=10
# Estensioni file permesse (separati da virgola)
ALLOWED_EXTENSIONS=pdf,docx,doc,txt,md,png,jpg,jpeg,gif,webp

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=DEBUG  # DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_FORMAT=json  # json | text
LOG_DIR=/app/logs

# =============================================================================
# BACKUP
# =============================================================================
BACKUP_DIR=/backups
BACKUP_RETENTION_DAYS=7

# =============================================================================
# PRODUCTION ONLY
# =============================================================================
# Configurazioni per ambiente production
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
# DOMAIN=aistrategyhub.eu
# SENTRY_DSN=your-sentry-dsn-here

# =============================================================================
# DOCKER
# =============================================================================
# Per Docker Compose
COMPOSE_PROJECT_NAME=aistrategyhub

# =============================================================================
# NOTE
# =============================================================================
# 1. Genera SECRET_KEY con: python -c "import secrets; print(secrets.token_urlsafe(32))"
# 2. Usa lo stesso valore per SECRET_KEY e JWT_SECRET_KEY o genera separati
# 3. In produzione, usa password forti e uniche
# 4. Non committare mai il file .env in Git!
# 5. Aggiungi .env al .gitignore
